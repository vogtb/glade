{
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/node_modules",
    "**/target",
    "**/.next",
    "**/.turbo",
    "**/dist",
    "**/dist-*",
    "**/build",
    "**/.cache",
    "**/tmp",
    "vendor/glfw",
    "vendor/dawn"
  ],
  "lsp": {
    "vscode-css-language-server": {
      "settings": {
        "css": {
          "validate": false
        }
      }
    }
  },
  "languages": {
    "Markdown": {
      "soft_wrap": "preferred_line_length"
    }
  }
}
