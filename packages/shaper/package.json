{
  "name": "@glade/shaper",
  "version": "0.0.1",
  "type": "module",
  "main": "ts/shaper.ts",
  "types": "ts/shaper.ts",
  "exports": {
    ".": {
      "types": "./ts/shaper.ts",
      "default": "./ts/shaper.ts"
    }
  },
  "files": [
    "ts",
    "pkg"
  ],
  "scripts": {
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "build.debug": "wasm-pack build --target web --out-dir pkg",
    "build.release": "wasm-pack build --target web --out-dir pkg",
    "build": "bun run build.debug",
    "typecheck": "bunx tsc --noEmit",
    "clean": "rm -rf pkg",
    "nuke": "rm -rf node_modules"
  },
  "dependencies": {
    "@glade/comptime": "workspace:*",
    "@glade/fonts": "workspace:*",
    "@glade/logging": "workspace:*",
    "@glade/utils": "workspace:*"
  }
}
