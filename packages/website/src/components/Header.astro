---

<header class="border-b border-gray-100">
  <div class="mx-auto max-w-3xl px-3 py-4">
    <div class="flex items-baseline justify-between gap-3">
      <div class="flex flex-col items-baseline gap-2">
        <a
          href="/"
          class="flex flex-row items-center justify-center shrink gap-2 no-underline text-gray-900"
        >
          <span class="text-[38px] p-0 m-0 mb-0.75">⚘</span>
          <h1 class="text-[26px] font-medium tracking-tight text-gray-900">Glade</h1>
        </a>
      </div>
      <nav class="hidden md:flex items-center gap-6 font-medium">
        <a
          href="#how-it-works"
          class="text-sm text-gray-600 hover:text-[#155dfc] cursor-pointer no-underline"
        >
          README.md
        </a>
        <a
          href="#features"
          class="text-sm text-gray-600 hover:text-[#155dfc] cursor-pointer no-underline"
        >
          Features
        </a>
        <a
          href="#faq"
          class="text-sm text-gray-600 hover:text-[#155dfc] cursor-pointer no-underline"
        >
          FAQ
        </a>
        <a
          href="https://github.com/nicholasbarnette/glade"
          target="_blank"
          rel="noopener noreferrer"
          class="text-sm text-gray-600 hover:text-[#155dfc] no-underline font-medium"
        >
          GitHub
        </a>
      </nav>

      <!-- Mobile menu button -->
      <label
        for="mobile-menu-toggle"
        class="flex h-9 w-9 items-center justify-center rounded-xl hover:bg-gray-100 cursor-pointer md:hidden"
        aria-label="Open menu"
      >
        <svg width="16" height="16" viewBox="0 0 20 20">
          <path
            fill="transparent"
            stroke-width="2"
            stroke="#374151"
            stroke-linecap="square"
            d="M 2 2.5 L 20 2.5"></path>
          <path
            fill="transparent"
            stroke-width="2"
            stroke="#374151"
            stroke-linecap="square"
            d="M 2 9.423 L 20 9.423"></path>
          <path
            fill="transparent"
            stroke-width="2"
            stroke="#374151"
            stroke-linecap="square"
            d="M 2 16.346 L 20 16.346"></path>
        </svg>
      </label>
    </div>
  </div>
</header>

<!-- Mobile menu (checkbox-based toggle) -->
<input type="checkbox" id="mobile-menu-toggle" class="hidden peer" />

<div class="fixed inset-0 z-50 md:hidden invisible peer-checked:visible">
  <label for="mobile-menu-toggle" class="absolute inset-0 bg-black/50"></label>

  <div class="absolute left-0 right-0 top-0 mx-auto w-full bg-white shadow-xl">
    <div class="flex w-full items-center justify-between px-3 py-4 border-b border-gray-100">
      <a href="/" class="flex items-center gap-2 no-underline text-gray-900">
        <span class="text-[38px] p-0 m-0 mb-0.75">⚘</span>
        <h1 class="text-[26px] font-medium tracking-tight text-gray-900">Glade</h1>
      </a>
      <label
        for="mobile-menu-toggle"
        class="flex h-9 w-9 items-center justify-center rounded-xl hover:bg-gray-100 cursor-pointer"
        aria-label="Close menu"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="#374151"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M18 6 6 18"></path>
          <path d="m6 6 12 12"></path>
        </svg>
      </label>
    </div>

    <div class="flex flex-col gap-1 p-4">
        <a
          href="#features"
          class="mobile-menu-link flex items-center rounded-xl p-3 text-gray-700 hover:bg-gray-100 no-underline font-normal"
        >
          Features
        </a>
      <a
        href="#how-it-works"
        class="mobile-menu-link flex items-center rounded-xl p-3 text-gray-700 hover:bg-gray-100 no-underline font-normal"
      >
        README.md
      </a>
      <a
        href="#faq"
        class="mobile-menu-link flex items-center rounded-xl p-3 text-gray-700 hover:bg-gray-100 no-underline font-normal"
      >
        FAQ
      </a>
      <a
        href="https://github.com/nicholasbarnette/glade"
        target="_blank"
        rel="noopener noreferrer"
        class="flex items-center justify-between rounded-xl p-3 text-gray-700 hover:bg-gray-100 no-underline font-normal"
      >
        <span>GitHub</span>
        <span>↗</span>
      </a>
    </div>
  </div>
</div>

<script>
  document.querySelectorAll(".mobile-menu-link").forEach((link) => {
    link.addEventListener("click", () => {
      const toggle = document.getElementById("mobile-menu-toggle") as HTMLInputElement;
      if (toggle) {
        toggle.checked = false;
      }
    });
  });
</script>
