---
type Props = {
  title: string;
  description?: string;
};

const { title, description = "Glade is a TypeScript GUI library that uses WebGPU to render apps at 120fps, whether you're targeting a browser or native macOS." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-white">
    <slot />
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
