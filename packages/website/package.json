{
  "name": "@glade/website",
  "version": "0.0.1",
  "type": "module",
  "dependencies": {
    "@glade/glade": "workspace:*",
    "@glade/library": "workspace:*",
    "react": "19.1.0",
    "react-dom": "19.1.0"
  },
  "devDependencies": {
    "@astrojs/react": "4.2.1",
    "@tailwindcss/vite": "4.1.18",
    "@types/react": "19.1.6",
    "@types/react-dom": "19.1.5",
    "astro": "5.7.13",
    "@astrojs/check": "0.9.6"
  },
  "scripts": {
    "dev": "astro dev --port 3001",
    "build": "astro build",
    "preview": "astro preview --port 3001",
    "deploy": "bun run build && wrangler pages deploy dist --project-name=glade --commit-dirty=true",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "astro check && tsc --noEmit",
    "clean": "rm -rf dist",
    "nuke": "rm -rf node_modules"
  }
}
