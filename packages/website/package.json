{
  "name": "@glade/website",
  "version": "0.0.1",
  "type": "module",
  "dependencies": {
    "@glade/glade": "workspace:*",
    "@glade/library": "workspace:*",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.562.0",
    "tailwind-merge": "3.4.0",
    "tw-animate-css": "1.4.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "4.1.18",
    "@vitejs/plugin-react": "5.1.2",
    "vite": "7.3.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "deploy": "bun run build && wrangler pages publish dist --project-name=glade --commit-dirty=true",
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "nuke": "rm -rf node_modules"
  }
}
