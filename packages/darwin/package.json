{
  "name": "@glade/darwin",
  "version": "0.0.1",
  "type": "module",
  "main": "darwin.ts",
  "types": "darwin.ts",
  "scripts": {
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "build.debug": "clang -ObjC -fobjc-arc -framework Cocoa -shared ime_handler.m -o ../../libs/ime_handler.dylib",
    "build.release": "clang -ObjC -fobjc-arc -framework Cocoa -shared ime_handler.m -o ../../libs/ime_handler.dylib",
    "clean": "rm -rf dist",
    "nuke": "rm -rf node_modules"
  },
  "dependencies": {
    "@glade/core": "workspace:*",
    "@glade/dawn": "workspace:*",
    "@glade/flash": "workspace:*",
    "@glade/glfw": "workspace:*",
    "@glade/utils": "workspace:*"
  },
  "devDependencies": {
    "@types/bun": "latest"
  }
}
