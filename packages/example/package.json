{
  "name": "@glade/example",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "dev:example:native": "bun ./example.ts",
    "dev:example:web": "bun build ./example.ts --outdir=./dist --minify && bun ./serve.ts",
    "build:example:native": "bun build ./example.ts --compile --outfile=./dist/example",
    "build:example:web": "bun build ./example.ts --outdir=./dist --minify",
    "run:example:native": "bun build ./example.ts --compile --outfile=./dist/example && ./dist/example",
    "run:example:web": "bun build ./example.ts --outdir=./dist --minify && open 'http://localhost:3000/index.html' && bun ./serve.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "nuke": "rm -rf node_modules"
  },
  "dependencies": {
    "@glade/comptime": "workspace:*",
    "@glade/core": "workspace:*",
    "@glade/demos": "workspace:*",
    "@glade/flash": "workspace:*",
    "@glade/platform": "workspace:*",
    "@glade/utils": "workspace:*"
  }
}
