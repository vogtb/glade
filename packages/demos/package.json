{
  "name": "@glade/demos",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "dev:webgpu:native": "bun ./demo-webgpu.ts",
    "dev:webgpu:web": "bun build ./demo-webgpu.ts --outdir=./dist --minify && bun ./serve.ts",
    "build:webgpu:native": "bun build ./demo-webgpu.ts --compile --outfile=./dist/demo-webgpu",
    "build:webgpu:web": "bun build ./demo-webgpu.ts ./demo-flash.ts --outdir=./dist --minify",
    "run:webgpu:native": "bun build ./demo-webgpu.ts --compile --outfile=./dist/demo-webgpu && ./dist/demo-webgpu",
    "run:webgpu:web": "bun build ./demo-webgpu.ts ./demo-flash.ts --outdir=./dist --minify && open 'http://localhost:3000/index.html' && bun ./serve.ts",
    "run:flash:native": "bun build ./demo-flash.ts --compile --outfile=./dist/demo-flash && ./dist/demo-flash",
    "run:flash:web": "bun build ./demo-flash.ts --outdir=./dist --minify && open 'http://localhost:3000/flash.html' && bun ./serve.ts",
    "build:flash:native": "bun build ./demo-flash.ts --compile --outfile=./dist/demo-flash",
    "build:flash:web": "bun build ./demo-flash.ts ./demo-flash.ts --outdir=./dist --minify",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "nuke": "rm -rf node_modules"
  },
  "dependencies": {
    "@glade/comptime": "workspace:*",
    "@glade/core": "workspace:*",
    "@glade/flash": "workspace:*",
    "@glade/platform": "workspace:*"
  }
}
