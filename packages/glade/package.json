{
  "name": "@glade/glade",
  "version": "0.0.1",
  "type": "module",
  "main": "glade.ts",
  "types": "glade.ts",
  "exports": {
    ".": {
      "types": "./glade.ts",
      "default": "./glade.ts"
    },
    "./platform": {
      "bun": "./platform.macos.ts",
      "browser": "./platform.browser.ts",
      "default": "./platform.browser.ts"
    }
  },
  "scripts": {
    "lint": "eslint . --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "nuke": "rm -rf node_modules"
  },
  "dependencies": {
    "@glade/core": "workspace:*",
    "@glade/fonts": "workspace:*",
    "@glade/layout": "workspace:*",
    "@glade/logging": "workspace:*",
    "@glade/platform": "workspace:*",
    "@glade/shaper": "workspace:*",
    "@glade/svg": "workspace:*",
    "@glade/utils": "workspace:*"
  }
}
