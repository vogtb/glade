{
  "name": "glade",
  "private": true,
  "version": "0.0.1",
  "packageManager": "bun@1.3.5",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build:glade:native": "bun run --filter '@glade/demos' build:glade:native",
    "build:glade:web": "bun run --filter '@glade/demos' build:glade:web",
    "build:layout": "bun run --filter '@glade/layout' build",
    "build:vendor-dawn": "./vendor/build-dawn.sh",
    "build:vendor-glfw": "./vendor/build-glfw.sh",
    "build:webgpu:native": "bun run --filter '@glade/demos' build:webgpu:native",
    "build:webgpu:web": "bun run --filter '@glade/demos' build:webgpu:web",
    "demo:webgpu:native": "bun run --filter '@glade/demos' dev:webgpu:native",
    "demo:webgpu:web": "bun run --filter '@glade/demos' dev:webgpu:web",
    "postinstall": "./vendor/build-glfw.sh",
    "run:glade:native": "bun run --filter '@glade/demos' run:glade:native",
    "run:glade:web": "bun run --filter '@glade/demos' run:glade:web",
    "run:webgpu:native": "bun run --filter '@glade/demos' run:webgpu:native",
    "run:webgpu:web": "bun run --filter '@glade/demos' run:webgpu:web",
    "typecheck": "bun run --filter '*' typecheck"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@types/bun": "latest",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.8",
    "@webgpu/types": "0.1.67",
    "eslint": "9.39.1",
    "globals": "16.5.0",
    "prettier": "3.7.4",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "tailwindcss": "4.1.18",
    "turbo": "2.7.2",
    "typescript": "5.7.2",
    "typescript-eslint": "8.48.1",
    "@typescript-eslint/eslint-plugin": "8.51.0",
    "@typescript-eslint/parser": "8.51.0",
    "eslint-plugin-prettier": "5.5.4",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "wrangler": "4.56.0"
  }
}
