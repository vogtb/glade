{
  "name": "glade",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "bun run --filter '*' typecheck",
    "demo:native": "bun run --filter '*' dev:native",
    "demo:web": "bun run --filter '*' dev:web",
    "build:vendor-glfw": "./vendor/build-glfw.sh",
    "build:vendor-dawn": "./vendor/build-dawn.sh",
    "postinstall": "./vendor/build-glfw.sh"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/bun": "latest",
    "@webgpu/types": "^0.1.67",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "typescript": "5.7.2",
    "typescript-eslint": "^8.48.1"
  }
}
