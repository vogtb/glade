{
  "name": "glade",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "typecheck": "bun run --filter '*' typecheck",
    "demo:webgpu:native": "bun run --filter '@glade/demos' dev:webgpu:native",
    "demo:webgpu:web": "bun run --filter '@glade/demos' dev:webgpu:web",
    "build:webgpu:native": "bun run --filter '@glade/demos' build:webgpu:native",
    "run:webgpu:native": "bun run --filter '@glade/demos' run:webgpu:native",
    "build:webgpu:web": "bun run --filter '@glade/demos' build:webgpu:web",
    "run:webgpu:web": "bun run --filter '@glade/demos' run:webgpu:web",
    "run:flash:native": "bun run --filter '@glade/demos' run:flash:native",
    "run:flash:web": "bun run --filter '@glade/demos' run:flash:web",
    "build:flash:native": "bun run --filter '@glade/demos' build:flash:native",
    "build:flash:web": "bun run --filter '@glade/demos' build:flash:web",
    "build:vendor-glfw": "./vendor/build-glfw.sh",
    "build:vendor-dawn": "./vendor/build-dawn.sh",
    "build:layout": "bun run --filter '@glade/layout' build",
    "postinstall": "./vendor/build-glfw.sh"
  },
  "devDependencies": {
    "@eslint/js": "9.39.1",
    "@tailwindcss/vite": "4.1.18",
    "@types/bun": "latest",
    "@types/react": "19.1.12",
    "@types/react-dom": "19.1.8",
    "@vitejs/plugin-react": "5.1.2",
    "@webgpu/types": "0.1.67",
    "eslint": "9.39.1",
    "globals": "16.5.0",
    "prettier": "3.7.4",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "tailwindcss": "4.1.18",
    "turbo": "2.6.3",
    "typescript": "5.7.2",
    "typescript-eslint": "8.48.1",
    "vite": "7.3.0",
    "wrangler": "4.56.0"
  }
}
